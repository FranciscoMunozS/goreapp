<h2>Olvido su contraseña?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="ui form">
    <div class="field">
      <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Correo electronico' %>
    </div>
    <%= f.button :submit, "Recuperar contraseña", class: 'ui primary button' %>
  </div>
<% end %>
<div class="ui message">
  <%= render "devise/shared/links" %>
</div>

